<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_producto_nuevo_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jean Razgado Deste침ido con Aplicaciones"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="25sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_producto_nuevo_imagen"
                android:layout_gravity="center_vertical"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/tienda"
                android:padding="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:paddingEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_producto_nuevo_codigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C칩digo 1"
                        android:textSize="15sp"
                        android:maxWidth="178dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_producto_nuevo_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indumentaria"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_producto_nuevo_subcategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pantal칩n"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_producto_nuevo_modelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin Modelo"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_producto_nuevo_observacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Una breve observaci칩n"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
